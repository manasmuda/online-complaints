<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainscreenlinear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/splashscreenlinear1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/splashlogolinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/splashimage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:scaleX="1"
                android:scaleY="1"
                app:srcCompat="@mipmap/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/splashloadinglinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/splashprogressbar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/verifylinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorButtonNormal"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="200dp"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            android:translationY="0dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="EMAIL IS NOT VERIFIED"
                android:textColor="@color/colorPrimary"
                android:textSize="24dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/reslinkbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:text="Resend " />

                <Button
                    android:id="@+id/conbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:text="CONTINUE " />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/loginsignuplinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/loginsignupimagelinear"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/loginsignuppagelogo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:scaleX="1"
                android:scaleY="1"
                app:srcCompat="@mipmap/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/radiocategorylinear"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/radiocategory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/studentrb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Student"
                    android:buttonTint="@color/colorPrimary"/>

                <RadioButton
                    android:id="@+id/departmentrb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Department"
                    android:buttonTint="@color/colorPrimary"/>

                <RadioButton
                    android:id="@+id/administratorrb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Administrator"
                    android:buttonTint="@color/colorPrimary"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/loginsignuploginlinear"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/loginbutton"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:background="@drawable/loginsignupbuttonbg"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/loginsignupsignuplinear"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:gravity="top|center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/signupbutton"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="SIGNUP"
                android:background="@drawable/loginsignupbuttonbg"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/signuplinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <LinearLayout
            android:id="@+id/signupimagelinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/signupimage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                app:srcCompat="@mipmap/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fullnamelinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/fullnameedit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_margin="8dp"
                android:padding="10dp"
                android:textColorHint="#000000"
                android:hint="Enter username"
                android:background="@drawable/editboxbg"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/emaillinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/emailedit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_margin="8dp"
                android:padding="10dp"
                android:textColorHint="#000000"
                android:hint="Enter Email-id"
                android:background="@drawable/editboxbg"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/passwordlinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/passwordedit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPassword"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_margin="8dp"
                android:padding="10dp"
                android:textColorHint="#000000"
                android:hint="Type password"
                android:background="@drawable/editboxbg"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/repasswordlinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/repasswordedit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPassword"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_margin="8dp"
                android:padding="10dp"
                android:textColorHint="#000000"
                android:hint="Re-type Password"
                android:background="@drawable/editboxbg"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/phonelinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/phoneedit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="phone"
                android:hint="Enter Phone number"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_margin="8dp"
                android:padding="10dp"
                android:textColorHint="#000000"
                android:background="@drawable/editboxbg"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/signupbuttonlinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/signupenterbutton"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="SIGN UP"
                android:background="@drawable/loginsignupbuttonbg"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/loginlinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <LinearLayout
            android:id="@+id/loginimagelinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/loginimage"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:scaleType="fitXY"
                app:srcCompat="@mipmap/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/emailidlinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal">



            <EditText
                android:id="@+id/emailidedit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:hint="Enter Email"
                android:background="@drawable/editboxbg"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_margin="8dp"
                android:padding="10dp"
                android:textColorHint="#000000"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/passwordtypelinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/passwordtypeedit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPassword"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_margin="8dp"
                android:padding="10dp"
                android:hint="Enter Password"
                android:textColorHint="#000000"
                android:background="@drawable/editboxbg"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/loginbuttonlinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/loginenterbutton"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:background="@drawable/loginsignupbuttonbg"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>